<div class="collection_card">
    <div class="collection_card__image" style="--ratio-percent: {{ 1 | divided_by: 0.8 | times: 100 }}%;">
        {% if card_collection.image != blank %}  
        <a href="{{ card_collection.url }}">       
            <img
                    srcset="
                    {%- if card_collection.image.width >= 165 -%}{{ card_collection.image | image_url: width: 165 }} 165w,{%- endif -%}
                    {%- if card_collection.image.width >= 360 -%}{{ card_collection.image | image_url: width: 360 }} 360w,{%- endif -%}
                    {%- if card_collection.image.width >= 533 -%}{{ card_collection.image | image_url: width: 533 }} 533w,{%- endif -%}
                    {%- if card_collection.image.width >= 720 -%}{{ card_collection.image | image_url: width: 720 }} 720w,{%- endif -%}
                    {%- if card_collection.image.width >= 940 -%}{{ card_collection.image | image_url: width: 940 }} 940w,{%- endif -%}
                    {%- if card_collection.image.width >= 1066 -%}{{ card_collection.image | image_url: width: 1066 }} 1066w,{%- endif -%}
                    {{ card_collection.image | image_url }} {{ card_collection.image.width }}w
                    "
                    src="{{ card_collection.image | image_url: width: 533 }}"
                    sizes="(min-width: 1200px) {{ 1200 | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
                    alt="{{ card_collection.image.alt | escape }}"
                    class="motion-reduce"
                    {% unless lazy_load == false %}
                    loading="lazy"
                    {% endunless %}
                    width="{{ card_collection.image.width }}"
                    height="auto"
                >
            </a>    
        {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
    </div>
    <div class="collection_card__content">
        <a href="{{ card_collection.url }}">
            <h3 class="h4 collection_card__title">{{ card_collection.title }}</h3>
        </a>    
        {{ card_collection.content | escape | truncate: 50 }}
    </div>
</div>